<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_drawer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:openDrawer="start">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.google.android.material.appbar.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.AppBarOverlay">
			<androidx.appcompat.widget.Toolbar
				android:id="@+id/_toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:popupTheme="@style/AppTheme.PopupOverlay"/>
		</com.google.android.material.appbar.AppBarLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<LinearLayout
				android:id="@+id/base"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#212121"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/actionbar"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:background="#8BC34A"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/draw"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="6dp"
						android:padding="4dp"
						app:srcCompat="@drawable/ic_menu"
						android:scaleType="centerCrop"/>
					<TextView
						android:id="@+id/atitle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="MCPEApp"
						android:textSize="20sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/alogo"
						android:layout_width="150dp"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/logotipo_gradient"
						android:scaleType="centerCrop"
						android:alpha="0.4"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/sustituible_tab"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#689F38"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/inicio_susti"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:orientation="vertical"
						android:layout_weight="1">
						<TextView
							android:id="@+id/initext_susti"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="4dp"
							android:paddingTop="12dp"
							android:paddingRight="4dp"
							android:paddingBottom="4dp"
							android:text="Inicio"
							android:textSize="12sp"
							android:textColor="#FFFFFF"/>
						<LinearLayout
							android:id="@+id/line1_susti"
							android:layout_width="match_parent"
							android:layout_height="3dp"
							android:background="#FFFFFF"
							android:orientation="horizontal"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/chat_susti"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:orientation="vertical"
						android:layout_weight="1">
						<TextView
							android:id="@+id/chattext_susti"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="4dp"
							android:paddingTop="12dp"
							android:paddingRight="4dp"
							android:paddingBottom="4dp"
							android:text="Chat"
							android:textSize="12sp"
							android:textColor="#33691E"/>
						<LinearLayout
							android:id="@+id/line2_susti"
							android:layout_width="match_parent"
							android:layout_height="3dp"
							android:orientation="horizontal"/>
					</LinearLayout>
				</LinearLayout>
				<ListView
					android:id="@+id/viewpublic"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingLeft="12dp"
					android:paddingRight="12dp"
					android:dividerHeight="32dp"
					android:choiceMode="none"/>
				<ListView
					android:id="@+id/chatview"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:dividerHeight="0dp"
					android:divider="@null"
					android:choiceMode="none"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/imgbase"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:background="#7CB342"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imgvista"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="8dp"
					app:srcCompat="@drawable/logo_corner"
					android:scaleType="centerCrop"/>
				<LinearLayout
					android:id="@+id/pbase"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ProgressBar
						android:id="@+id/pb"
						android:layout_width="match_parent"
						android:layout_height="30dp"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="8dp"
						android:padding="8dp"
						android:indeterminate="false"
						style="?android:progressBarStyleHorizontal"
						android:layout_weight="1"/>
					<TextView
						android:id="@+id/prog"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="0%"
						android:textSize="12sp"
						android:textColor="#FFFFFF"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/chat_base"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="6dp"
				android:paddingTop="8dp"
				android:paddingRight="6dp"
				android:paddingBottom="8dp"
				android:background="#689F38"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<Button
					android:id="@+id/cimg"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginRight="6dp"
					android:background="@drawable/ic_image_white"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<EditText
					android:id="@+id/chat_in"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="5dp"
					android:background="#AED581"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="Escribe algo...."
					android:textColorHint="#607D8B"
					android:imeOptions="actionSend"
					android:layout_weight="1"/>
				<Button
					android:id="@+id/csend"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginLeft="8dp"
					android:background="@drawable/ic_sendwhite"
					android:textSize="12sp"
					android:textColor="#000000"/>
			</LinearLayout>
			<com.google.android.gms.ads.AdView
				android:id="@+id/adview1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#689F38"
				app:adSize="BANNER"
				app:adUnitId="ca-app-pub-2954315498540267/4097497221"/>
		</LinearLayout>
		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/_fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="32dp"
			android:layout_gravity="right|bottom"
			app:srcCompat="@drawable/ic_web_white"/>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/_nav_view"
		android:layout_width="320dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#EEEEEE">
		<include	layout="@layout/_drawer_principal"/>
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
