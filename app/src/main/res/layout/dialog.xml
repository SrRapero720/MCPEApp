<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/base"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#212121"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#8BC34A"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/logo"
				android:focusable="false"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				app:srcCompat="@drawable/logo_corner"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/title"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Undefined"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/type"
				android:focusable="false"
				android:layout_width="25dp"
				android:layout_height="25dp"
				app:srcCompat="@drawable/ic_cloud_off_white"
				android:scaleType="fitCenter"/>
		</LinearLayout>
		<TextView
			android:id="@+id/desc"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="8dp"
			android:paddingTop="6dp"
			android:paddingBottom="6dp"
			android:text="undefined undefinedundefinedundefined undefined undefinedundefinedundefinedundefinedundefinedundefinedundefined"
			android:textSize="12sp"
			android:textColor="#FFFFFF"/>
		<LinearLayout
			android:id="@+id/acbase"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:background="#33691E"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">
			<Button
				android:id="@+id/btn2"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:background="#33691E"
				android:text="Cancelar"
				android:textSize="14sp"
				android:textColor="#FFFFFF"/>
			<Button
				android:id="@+id/btn"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:background="#33691E"
				android:gravity="center_horizontal|center_vertical"
				android:text="Aceptar"
				android:textSize="14sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
