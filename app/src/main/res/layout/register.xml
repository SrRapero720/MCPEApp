<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/actionbar"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:paddingLeft="8dp"
		android:background="#8BC34A"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<Button
			android:id="@+id/back"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginRight="4dp"
			android:padding="8dp"
			android:background="@drawable/ic_arrow_back_white"
			android:textSize="12sp"
			android:textColor="#000000"/>
		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="MCPEApp"
			android:textSize="20sp"
			android:textColor="#FFFFFF"
			android:layout_weight="1"/>
		<ImageView
			android:id="@+id/img_gradient"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/logotipo_gradient"
			android:scaleType="centerCrop"
			android:alpha="0.4"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/colorbase"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/basescroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/base"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#212121"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<TextView
					android:id="@+id/subtitle_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:layout_marginBottom="8dp"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="REGISTRATE"
					android:textSize="25sp"
					android:textColor="#FFFFFF"/>
				<LinearLayout
					android:id="@+id/register_border"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:padding="3dp"
					android:background="#33691E"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/register_base"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="12dp"
						android:background="#689F38"
						android:orientation="vertical">
						<TextView
							android:id="@+id/name_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Nombre completo"
							android:textSize="10sp"
							android:textColor="#FFFFFF"/>
						<EditText
							android:id="@+id/name_in"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:layout_marginBottom="8dp"
							android:paddingLeft="12dp"
							android:paddingTop="4dp"
							android:paddingRight="12dp"
							android:paddingBottom="4dp"
							android:background="#AED581"
							android:textSize="16sp"
							android:textColor="#000000"
							android:textColorHint="#607D8B"
							android:singleLine="true"
							android:imeOptions="actionNext"/>
						<TextView
							android:id="@+id/email_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="8dp"
							android:text="Correo electrónico"
							android:textSize="10sp"
							android:textColor="#FFFFFF"/>
						<EditText
							android:id="@+id/email_in"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:layout_marginBottom="8dp"
							android:paddingLeft="12dp"
							android:paddingTop="4dp"
							android:paddingRight="12dp"
							android:paddingBottom="4dp"
							android:background="#AED581"
							android:textSize="16sp"
							android:textColor="#000000"
							android:textColorHint="#607D8B"
							android:singleLine="true"
							android:imeOptions="actionDone"/>
						<LinearLayout
							android:id="@+id/two_base"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/age_base"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical"
								android:layout_weight="1">
								<TextView
									android:id="@+id/age_text"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="8dp"
									android:text="Edad"
									android:textSize="10sp"
									android:textColor="#FFFFFF"/>
								<EditText
									android:id="@+id/age_in"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginRight="8dp"
									android:layout_marginBottom="8dp"
									android:paddingLeft="12dp"
									android:paddingTop="4dp"
									android:paddingRight="12dp"
									android:paddingBottom="4dp"
									android:background="#AED581"
									android:textSize="16sp"
									android:textColor="#000000"
									android:textColorHint="#607D8B"
									android:singleLine="true"
									android:inputType="numberSigned"
									android:imeOptions="actionNext"/>
							</LinearLayout>
							<LinearLayout
								android:id="@+id/phone_base"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical"
								android:layout_weight="1">
								<TextView
									android:id="@+id/phone_text"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginTop="8dp"
									android:text="Teléfono"
									android:textSize="10sp"
									android:textColor="#FFFFFF"/>
								<EditText
									android:id="@+id/phone_in"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginRight="8dp"
									android:layout_marginBottom="8dp"
									android:paddingLeft="12dp"
									android:paddingTop="4dp"
									android:paddingRight="12dp"
									android:paddingBottom="4dp"
									android:background="#AED581"
									android:textSize="16sp"
									android:textColor="#000000"
									android:textColorHint="#607D8B"
									android:singleLine="true"
									android:inputType="phone"
									android:imeOptions="actionNext"/>
							</LinearLayout>
						</LinearLayout>
						<TextView
							android:id="@+id/nick_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="8dp"
							android:text="Gamertag - XBOX"
							android:textSize="10sp"
							android:textColor="#FFFFFF"/>
						<EditText
							android:id="@+id/nick_in"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:layout_marginBottom="8dp"
							android:paddingLeft="12dp"
							android:paddingTop="4dp"
							android:paddingRight="12dp"
							android:paddingBottom="4dp"
							android:background="#AED581"
							android:textSize="16sp"
							android:textColor="#000000"
							android:textColorHint="#607D8B"
							android:singleLine="true"
							android:imeOptions="actionDone"/>
						<TextView
							android:id="@+id/pass_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="8dp"
							android:text="Contraseña"
							android:textSize="10sp"
							android:textColor="#FFFFFF"/>
						<EditText
							android:id="@+id/pass_in"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:layout_marginBottom="8dp"
							android:paddingLeft="12dp"
							android:paddingTop="4dp"
							android:paddingRight="12dp"
							android:paddingBottom="4dp"
							android:background="#AED581"
							android:textSize="16sp"
							android:textColor="#000000"
							android:textColorHint="#607D8B"
							android:singleLine="true"
							android:inputType="textPassword"
							android:imeOptions="actionDone"/>
						<com.google.android.gms.ads.AdView
							android:id="@+id/ad"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:adSize="LARGE_BANNER"
							app:adUnitId="ca-app-pub-2954315498540267/4097497221"/>
					</LinearLayout>
					<ProgressBar
						android:id="@+id/pb"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:indeterminate="true"
						style="?android:progressBarStyle"/>
					<Button
						android:id="@+id/register"
						android:layout_width="match_parent"
						android:layout_height="30dp"
						android:background="#33691E"
						android:gravity="center_horizontal|center_vertical"
						android:text="Registrarme"
						android:textSize="12sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal"
						android:layout_weight="1"/>
				</LinearLayout>
				<TextView
					android:id="@+id/subtitle_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="8dp"
					android:padding="8dp"
					android:text="TU MCPEID"
					android:textSize="30sp"
					android:textColor="#FFFFFF"/>
				<LinearLayout
					android:id="@+id/prev_border"
					android:layout_width="300dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:layout_marginBottom="24dp"
					android:padding="3dp"
					android:background="#33691E"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/prev_base"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="12dp"
						android:background="#689F38"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/profile_img"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginRight="8dp"
							app:srcCompat="@drawable/logo_corner"
							android:scaleType="fitCenter"/>
						<TextView
							android:id="@+id/mcpeid_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="12dp"
							android:paddingRight="8dp"
							android:paddingBottom="4dp"
							android:text="MCPEID"
							android:textSize="25sp"
							android:textColor="#FFFFFF"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
